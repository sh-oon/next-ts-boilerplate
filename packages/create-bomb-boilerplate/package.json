{
  "name": "create-bomb-boilerplate",
  "version": "1.0.1",
  "description": "CLI to scaffold a Yarn Berry monorepo boilerplate with TypeScript, Biome, and Turbo",
  "keywords": [
    "create",
    "monorepo",
    "yarn-workspace",
    "yarn-berry",
    "typescript",
    "biome",
    "turbo",
    "nextjs",
    "boilerplate",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sh-oon/next-ts-boilerplate.git",
    "directory": "packages/create-bomb-boilerplate"
  },
  "license": "MIT",
  "author": "sh-oon",
  "type": "module",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
