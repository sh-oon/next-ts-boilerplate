  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@mono/tsconfig": "*",
    "@types/node": "^24.9.1",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
