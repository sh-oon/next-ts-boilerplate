{
  "name": "bomb-boilerplate",
  "version": "1.0.0",
  "description": "Yarn Berry workspace based monorepo boilerplate with TypeScript, Biome, and Turbo",
  "keywords": [
    "monorepo",
    "yarn-workspace",
    "yarn-berry",
    "typescript",
    "biome",
    "turbo",
    "nextjs",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sh-oon/next-ts-boilerplate.git"
  },
  "license": "MIT",
  "author": "sh-oon",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.mjs",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "prepare": "husky",
    "type-check": "turbo run type-check",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@mono/tsconfig": "*",
    "glob": "^11.0.0",
    "husky": "^9",
    "lint-staged": "^15",
    "turbo": "^2.5.8",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.12.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
